<Window x:Class="NovikovIvanov_3ISP11_13.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovikovIvanov_3ISP11_13.Views"
        mc:Ignorable="d"
        Title="Товары" Height="450" Width="800">
    <Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Название"  Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Путь до фото" Binding="{Binding MainImagePath}"/>
                <DataGridTextColumn Header="Активен" Binding="{Binding IsActive}"/>
                <DataGridTextColumn Header="Номер поставщика" Binding="{Binding ManufacturerID}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
