<Window x:Class="NovikovIvanov_3ISP11_13.Views.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovikovIvanov_3ISP11_13.Views"
        mc:Ignorable="d"
        Title="Услуги" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ServicesGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Название"  Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding DurationInSeconds}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount}"/>
                <DataGridTextColumn Header="Путь до фото" Binding="{Binding MainImagePath}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
